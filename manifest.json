{
  "name": "Nifty URL",
  "version": "0.0.5",
  "description": "Remember which URLs are useful when revisiting them.",
  "permissions": ["storage", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
  	"default_title": "Nifty URL",
  	"default_popup": "popup.html",
    "default_icon": {
      "16": "images/nifty-16.png",
      "32": "images/nifty-32.png",
      "48": "images/nifty-48.png",
      "128": "images/nifty-128.png"
    }
  },
  "content_scripts": [
  	{
  		"matches": ["*://*/*"],
  		"js": ["contentScript.js"],
  		"css": ["contentScript.css"]
  	}
  ],
  "icons": {
    "16": "images/nifty-16.png",
    "32": "images/nifty-32.png",
    "48": "images/nifty-48.png",
    "128": "images/nifty-128.png"
  },
  "manifest_version": 2
}